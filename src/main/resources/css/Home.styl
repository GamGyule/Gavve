@import url('https://fonts.googleapis.com/css2?family=Noto+Sans+KR&display=swap');

gamgyulColor = #F8981D
borderColor = #2f2f2f
backgroundColor = #1b1b1b
fontColor = #A5A5A5

.fade-enter-active {
  animation: fadeinDown 1s;
}

@keyframes fadeinDown {
  from {
    opacity: 0;
    transform: translateY(-20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.clear
  clear both

h1, h2, h3
  padding 0
  margin 0

a
  color fontColor
  text-decoration none
  display block

html
  height 100%
  font-family 'Noto Sans KR', sans-serif;
  background-color backgroundColor
  color fontColor

*
  box-sizing border-box

.header
  height 34px
  border-bottom 1px solid borderColor

.header-nav
  position relative
  width 1240px
  height 34px
  margin 0 auto


.header-nav ul
  list-style none
  padding 0
  margin 0
  float right

.header-nav ul:after
  content ""
  display block
  clear both

.header-nav ul li
  position relative
  font-size 12px
  height 34px
  line-height 34px
  padding 0 10px
  float left

.header-nav ul li:after
  position absolute
  top 12px
  right 0
  width 1px
  height 10px
  background-color borderColor
  content ""

.header-nav ul li:last-child:after
  background-color transparent


.logo
  display inline-block
  position relative
  top 20px

  a
    color gamgyulColor
    font-size 24px
    display block


.swiper-button-prev
  left 10%

.swiper-button-prev:after, .swiper-button-next:after
  font-size 80px
  color white

.swiper-button-prev:hover:after, .swiper-button-next:hover:after
  color gamgyulColor

.swiper-button-next
  right 10%

.swiper-pagination-bullet-active
  background-color gamgyulColor


.thumb-image
  overflow hidden

.thumb-image:hover img
  transform scale(1.05)
  transition transform 0.2s ease-in


// PC
@media screen and (min-width: 1241px)

  .banner-container
    height 512px
    overflow hidden

  .header-gnb
    position relative
    margin 0 auto
    height 74px
    width 1240px

  .top-nav
    z-index 1240
    position fixed
    top 0
    left 0
    width 100%
    min-width 1024px
    background-color backgroundColor

  .swiper-container
    height 100%

  .home-banner
    display inline-block
    width 800px !important

  .main-banners
    width 100%
    margin-top 108px

  .banner-img-area
    width 100%
    background-repeat no-repeat
    background-position 50%
    background-size 100%

    a
      width 100%
      height 100%
      display inline-block
      color #e5e5e5

      img
        width 800px
        height 512px

  .banner-img-area:hover
    cursor: pointer

  .swiper-pagination-bullet
    transform scale(1.5)

  .g-contents
    width 1240px
    position relative
    margin 0 auto
    padding-top 30px

  .g-contents .mobile-content
    display none

  .recommand-banner
    background-color #252525
    height 360px

  .recommand-banner:hover
    cursor: pointer

  .recommand-banner img
    width 100%

  .recommand-banner-title
    width 100%
    height 100%
    padding 12px

  .swiper-scrollbar
    width 100% !important
    left 0% !important
    bottom 0px !important

  .swiper-scrollbar-drag
    background-color gamgyulColor

//모바일
@media screen and (max-width: 1240px)
  .top-nav
    display none

  .main-banners
    position relative
    top -2px

  .banner-img-area
    width 100%
    background-repeat no-repeat
    background-position 50%
    background-size 100%

    a
      width 100%
      height 100%
      display inline-block
      color #e5e5e5

      img
        width 100%

  .swiper-button-next, .swiper-button-prev
    display none

  .g-contents .desktop-content
    display none

  .recommand-banner
    background-color #252525

  .recommand-banner:hover
    cursor: pointer

  .recommand-banner img
    width 100%

  .recommand-banner-title
    width 100%
    height 100%
    padding 12px